{
  "manifest_version": 3,
  "name": "Từ Vựng Extension",
  "version": "1.0",
  "description": "Dịch và ôn tập từ vựng",
  "permissions": [
    "contextMenus",
    "storage",
    "identity",
    "activeTab",
    "scripting"
  ],
  "icons": {
    "16": "image/icon16.png",
    "48": "image/icon48.png",
    "128": "image/icon128.png"
  },
  "background": {

    "service_worker": "dist/bundle.js",
    "type": "module"
    
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "image/icon16.png",
      "48": "image/icon48.png",
      "128": "image/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css",
        "variables.css"
      ]
    }
  ],
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "image/icon32.png",
        "image/icon_setting.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}